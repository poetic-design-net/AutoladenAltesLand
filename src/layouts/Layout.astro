---
interface Props {
  title: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
}

const { 
  title, 
  description = "Auto kaufen im Alten Land | Faire Beratung, transparente Preise ✓ Persönliche Betreuung seit 2019 ✓ Über 500 zufriedene Kunden | Gebrauchtwagen & Neuwagen | Alexander Phillipowski",
  keywords = "Auto kaufen Altes Land, Autohaus Grünendeich, Gebrauchtwagen Altes Land, Neuwagen Hamburg, Fahrzeugberatung, Auto Finanzierung, KFZ Leasing, Autoverkauf Stade, Fahrzeughändler Buxtehude, Alexander Phillipowski, Autoladen Altes Land, Grünendeich, Stade, Buxtehude, faire Autoberatung, transparente Preise",
  ogImage = "https://autoladen-altesland.de/logo.png"
} = Astro.props;

const siteUrl = "https://autoladen-altesland.de";
const fullTitle = `${title} | Autohaus & Fahrzeugberatung im Alten Land`;
---

<!doctype html>
<html lang="de" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Alexander Phillipowski - Autoladen Altes Land" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#22c55e" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="format-detection" content="telephone=yes" />
    <link rel="canonical" href={siteUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content="de_DE" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={siteUrl} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />
    
    <!-- Geo Tags für lokale SEO -->
    <meta name="geo.region" content="DE-NI" />
    <meta name="geo.placename" content="Grünendeich, Altes Land" />
    <meta name="geo.position" content="53.4239;9.8172" />
    <meta name="ICBM" content="53.4239, 9.8172" />
    
    <!-- Business Schema.org Markup -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "AutomotiveBusiness",
      "name": "Autoladen Altes Land",
      "image": "https://autoladen-altesland.de/logo.png",
      "url": "https://autoladen-altesland.de",
      "telephone": "+49 162 123 4567",
      "email": "alex@autoladen-altesland.de",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Hauptstraße 123",
        "addressLocality": "Grünendeich",
        "postalCode": "21720",
        "addressCountry": "DE",
        "addressRegion": "Niedersachsen"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 53.4239,
        "longitude": 9.8172
      },
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "09:00",
          "closes": "17:00"
        },
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": "Saturday",
          "opens": "09:00",
          "closes": "14:00"
        }
      ],
      "sameAs": [
        "https://www.facebook.com/autoladen-altesland",
        "https://www.instagram.com/autoladen_altesland"
      ],
      "priceRange": "€€",
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.9",
        "reviewCount": "500"
      }
    }
    </script>
    
    <!-- FAQ Schema for better search results -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Welche Fahrzeuge bietet Autoladen Altes Land an?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Wir bieten eine große Auswahl an Neu- und Gebrauchtwagen, mit Schwerpunkt auf nachhaltiger Mobilität. Von kompakten Stadtfahrzeugen bis zu geräumigen Familienautos - wir finden das passende Fahrzeug für Ihre Bedürfnisse."
          }
        },
        {
          "@type": "Question",
          "name": "Wo befindet sich Autoladen Altes Land?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Unser Standort ist in Grünendeich im Alten Land, Hauptstraße 123, 21720 Grünendeich. Wir sind gut erreichbar aus Hamburg, Stade und Buxtehude."
          }
        },
        {
          "@type": "Question",
          "name": "Wie sind die Öffnungszeiten?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Montag bis Freitag: 9:00 - 17:00 Uhr, Samstag: 9:00 - 14:00 Uhr, Sonntag: Geschlossen. Gerne können Sie auch einen individuellen Termin vereinbaren."
          }
        },
        {
          "@type": "Question",
          "name": "Bietet Autoladen Altes Land auch Finanzierung an?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Ja, wir bieten flexible Finanzierungsmöglichkeiten und Leasing-Optionen an. Alexander Phillipowski berät Sie gerne persönlich zu den besten Konditionen für Ihre Situation."
          }
        }
      ]
    }
    </script>
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{fullTitle}</title>
    
    <!-- Preconnect for Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://images.unsplash.com" />
    <link rel="preconnect" href="https://images.unsplash.com" />
    
    <!-- Google Fonts with font-display: swap for better performance -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Caveat:wght@400;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="font-sans antialiased text-gray-900">
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
  
  :root {
    --color-primary: #1e40af;
    --color-secondary: #f97316;
    
    /* Perfekter Offset für Anchor Links */
    --scroll-offset: 3.5rem; /* 56px */
  }
  
  html {
    scroll-padding-top: var(--scroll-offset);
  }
  
  body {
    font-family: 'Inter', system-ui, sans-serif;
  }
  
  /* Spezifischer Offset für Sections mit IDs */
  section[id] {
    scroll-margin-top: var(--scroll-offset);
  }
</style>