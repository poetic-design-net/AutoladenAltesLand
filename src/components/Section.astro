---
interface Props {
  id?: string;
  background?: 'white' | 'gray' | 'gradient';
  padding?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { 
  id,
  background = 'white',
  padding = 'md',
  class: className = ''
} = Astro.props;

const backgrounds = {
  white: 'bg-white',
  gray: 'bg-gray-50',
  gradient: 'bg-gradient-to-b from-gray-50 to-white'
};

const paddings = {
  sm: 'py-12',
  md: 'py-20',
  lg: 'py-24'
};
---

<section 
  id={id}
  class={`${backgrounds[background]} ${paddings[padding]} ${className}`}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <slot />
  </div>
</section>