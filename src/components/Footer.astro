---
const currentYear = new Date().getFullYear();

const footerLinks = {
  leistungen: [
    { label: 'Fahrzeugvermittlung', href: '#leistungen' },
    { label: 'Ladeinfrastruktur', href: '#leistungen' },
    { label: 'Service & Wartung', href: '#leistungen' },
    { label: 'Beratung', href: '#leistungen' }
  ],
  unternehmen: [
    { label: 'Über Alex', href: '#ueber-alex' },
    { label: 'Fahrzeuge', href: '#fahrzeuge' },
    { label: 'Kundenstimmen', href: '#kundenstimmen' },
    { label: 'Kontakt', href: '/kontakt' }
  ],
  rechtliches: [
    { label: 'Impressum', href: '/impressum' },
    { label: 'Datenschutz', href: '/datenschutz' },
    { label: 'AGB', href: '/agb' },
    { label: 'Cookie-Einstellungen', href: '#', onclick: 'return false;' }
  ]
};

const socialLinks = [
  {
    name: 'Instagram',
    href: 'https://instagram.com',
