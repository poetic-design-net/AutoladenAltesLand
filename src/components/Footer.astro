  },
  {
    name: 'Facebook',
    href: 'https://facebook.com',
    icon: 'M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z'
  },
  {
    name: 'Google',
    href: 'https://g.page/autoladen-altesland',
    icon: 'M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z'
  }
];
---

<footer class="bg-gradient-to-b from-gray-900 to-black text-white relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-0 left-0 w-96 h-96 bg-brand-green rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-brand-blue rounded-full blur-3xl"></div>
  </div>
  
  <!-- Main Footer Content -->
  <div class="relative z-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <!-- Top Section with Handwritten Quote and Social -->
      <div class="flex flex-col md:flex-row justify-between items-center mb-12 pb-12 border-b border-gray-800">
        <div class="mb-6 md:mb-0">
          <div class="relative">
            <!-- Handwritten Quote -->
            <p class="text-2xl md:text-3xl text-white font-light tracking-wide" style="font-family: 'Caveat', cursive; transform: rotate(-1deg);">
              "Ehrlich, fair & unkompliziert"
            </p>
            <p class="text-brand-green text-base mt-1 text-right" style="font-family: 'Caveat', cursive;">
              - Alex Phillipowski
            </p>
          </div>
        </div>
        
        <!-- Social Links -->
        <div class="flex items-center gap-4">
          {socialLinks.map((social) => (
            <a 
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-brand-green transition-all duration-300 group"
              aria-label={social.name}
            >
              <svg class="w-5 h-5 fill-gray-400 group-hover:fill-white transition-colors" viewBox="0 0 24 24">
                <path d={social.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>
      
      <!-- Links Grid -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
        <!-- Contact Info -->
        <div class="col-span-2 md:col-span-1">
          <h4 class="text-brand-green font-semibold mb-4 text-sm uppercase tracking-wider">Kontakt</h4>
          <ul class="space-y-3">
            <li>
              <a href="tel:+491621234567" class="text-gray-400 hover:text-white transition-colors flex items-center gap-2 group">
                <svg class="w-4 h-4 text-brand-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <span class="text-sm">+49 162 123 4567</span>
              </a>
            </li>
            <li>
              <a href="mailto:alex@autoladen-altesland.de" class="text-gray-400 hover:text-white transition-colors flex items-center gap-2 group">
                <svg class="w-4 h-4 text-brand-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <span class="text-sm">alex@autoladen-altesland.de</span>
              </a>
            </li>
            <li class="text-gray-400 text-sm flex items-start gap-2 mt-4">
              <svg class="w-4 h-4 text-brand-green mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <div>
                <p>Hauptstraße 123</p>
                <p>21720 Grünendeich</p>
              </div>
            </li>
          </ul>
        </div>
        
        <!-- Services -->
        <div>
          <h4 class="text-brand-green font-semibold mb-4 text-sm uppercase tracking-wider">Leistungen</h4>
          <ul class="space-y-2">
            {footerLinks.leistungen.map((link) => (
              <li>
                <a href={link.href} class="text-gray-400 hover:text-white transition-colors text-sm">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
        
        <!-- Company -->
        <div>
          <h4 class="text-brand-green font-semibold mb-4 text-sm uppercase tracking-wider">Unternehmen</h4>
          <ul class="space-y-2">
            {footerLinks.unternehmen.map((link) => (
              <li>
                <a href={link.href} class="text-gray-400 hover:text-white transition-colors text-sm">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
        
        <!-- Legal -->
        <div>
          <h4 class="text-brand-green font-semibold mb-4 text-sm uppercase tracking-wider">Rechtliches</h4>
          <ul class="space-y-2">
            {footerLinks.rechtliches.map((link) => (
              <li>
                <a 
                  href={link.href} 
                  onclick={link.onclick}
                  class="text-gray-400 hover:text-white transition-colors text-sm"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
      
      <!-- Newsletter Section -->
      <div class="bg-gray-800/50 rounded-2xl p-6 md:p-8 mb-12 backdrop-blur-sm">
        <div class="md:flex md:items-center md:justify-between">
          <div class="mb-4 md:mb-0">
            <h3 class="text-lg font-semibold mb-2">Bleib auf dem Laufenden</h3>
            <p class="text-gray-400 text-sm">Erhalte Updates zu neuen Fahrzeugen und Angeboten.</p>
          </div>
          <form class="flex flex-col sm:flex-row gap-3 md:w-auto">
            <input 
              type="email" 
              placeholder="Deine E-Mail-Adresse"
              class="px-4 py-2 bg-gray-900 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-brand-green transition-colors"
            />
            <button 
              type="submit"
              class="px-6 py-2 bg-brand-green text-white rounded-lg font-medium hover:bg-brand-green/90 transition-colors"
            >
              Anmelden
            </button>
          </form>
        </div>
      </div>
      
      <!-- Bottom Bar -->
      <div class="flex flex-col md:flex-row justify-between items-center pt-8 border-t border-gray-800">
        <p class="text-gray-400 text-sm mb-4 md:mb-0">
          &copy; {currentYear} Autoladen Altes Land - Alexander Phillipowski. Alle Rechte vorbehalten.
        </p>
        
        <!-- Trust Badges -->
        <div class="flex items-center gap-6">
          <div class="flex items-center gap-2 text-sm text-gray-400">
            <svg class="w-5 h-5 text-brand-green" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span>15 Jahre Erfahrung</span>
          </div>
          <div class="flex items-center gap-2 text-sm text-gray-400">
            <svg class="w-5 h-5 text-brand-green" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            <span>4.9 Google Bewertung</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Smooth hover effects for links */
  footer a {
    position: relative;
  }
  
  footer a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: #44B35A;
    transition: width 0.3s ease;
  }
  
  footer a:hover::after {
    width: 100%;
  }
  
  /* Disable underline effect for social and button links */
  footer a.rounded-full::after,
  footer button::after {
    display: none;
  }
</style>