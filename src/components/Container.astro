---
interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
  class?: string;
}

const { 
  size = 'lg',
  class: className = ''
} = Astro.props;

const sizes = {
  sm: 'max-w-3xl',
  md: 'max-w-5xl',
  lg: 'max-w-7xl',
  xl: 'max-w-screen-xl',
  full: 'max-w-full'
};
---

<div class={`${sizes[size]} mx-auto px-4 sm:px-6 lg:px-8 ${className}`}>
  <slot />
</div>