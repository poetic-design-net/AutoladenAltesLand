---
interface Props {
  greeting?: string;
  headline?: string;
  subline?: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
}

const {
  greeting = "Moin!",
  headline = "Dein Partner für Mobilität",
  subline = "Ich bin Alex – dein persönlicher Ansprechpartner im Alten Land. Seit 2019 betreue ich Kunden zwischen Apfelplantagen und Elbdeich.",
  primaryCTA = {
    text: "Kontakt aufnehmen",
    href: "/kontakt"
  },
  secondaryCTA = {
    text: "Mehr erfahren", 
    href: "#ueber-alex"
  }
} = Astro.props;

const trustBadges = [
  "500+ zufriedene Kunden",
  "4.9 ⭐ Google Bewertungen", 
  "Persönliche Beratung seit 2019"
];
---

<section id="home" class="relative min-h-screen flex items-center pt-20">
  <!-- Split Design -->
  <div class="w-full">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        
        <!-- Text Content -->
        <div class="order-2 lg:order-1">
          <span class="inline-block text-brand-green text-lg font-semibold mb-4">
            {greeting}
          </span>
          
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-brand-blue mb-6 leading-tight">
            {headline}
          </h1>
          
          <p class="text-lg text-gray-600 mb-8 leading-relaxed">
            {subline}
          </p>
          
          <!-- Trust Badges -->
          <div class="flex flex-wrap gap-4 mb-10">
            {trustBadges.map((badge) => (
              <span class="inline-flex items-center px-4 py-2 bg-gray-50 text-sm text-gray-600 rounded-full">
                {badge}
              </span>
            ))}
          </div>
          
          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a 
              href={primaryCTA.href}
              class="inline-flex items-center justify-center px-8 py-4 bg-brand-blue text-white rounded-full font-medium hover:bg-brand-lightblue transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
            >
              {primaryCTA.text}
            </a>
            
            <a 
              href={secondaryCTA.href}
              class="inline-flex items-center justify-center px-8 py-4 bg-white text-brand-green rounded-full font-medium border-2 border-brand-green hover:bg-brand-green hover:text-white transition-all duration-200"
            >
              {secondaryCTA.text}
            </a>
          </div>
        </div>
        
        <!-- Image -->
        <div class="order-1 lg:order-2 relative">
          <div class="relative rounded-2xl overflow-hidden shadow-2xl">
            <img 
              src="https://images.unsplash.com/photo-1449965408869-eaa3f722e40d?w=800&h=600&fit=crop&q=80"
              alt="Mobilität und Service"
              class="w-full h-[400px] lg:h-[500px] object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-brand-blue/20 to-transparent"></div>
          </div>
          
          <!-- Floating Card -->
          <div class="absolute -bottom-6 -left-6 bg-white p-6 rounded-xl shadow-lg max-w-xs hidden lg:block">
            <p class="text-2xl font-bold text-brand-blue mb-2">24/7</p>
            <p class="text-gray-600">Immer für dich erreichbar</p>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</section>