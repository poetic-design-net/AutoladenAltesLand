---
// Get current German time for online status
const now = new Date();
const germanTime = new Date(now.toLocaleString("en-US", {timeZone: "Europe/Berlin"}));
const hours = germanTime.getHours();
const day = germanTime.getDay();

// Check if Alex is online
const isOnline = 
  (day >= 1 && day <= 5 && hours >= 9 && hours < 17) || 
  (day === 6 && hours >= 9 && hours < 14);

interface Props {
  greeting?: string;
  headline?: string;
  subline?: string;
  primaryCTA?: {
    text: string;
    href: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
  };
  trustBadges?: string[];
  floatingCard?: {
    enabled: boolean;
    title: string;
    subtitle: string;
  };
}

const {
  greeting = "Dein Partner für",
  headline = "faire Mobilität",
  subline = "Ehrliche Beratung, transparente Preise und nachhaltige Lösungen.",
  primaryCTA = {
    text: "Kostenloses Beratungsgespräch",
    href: "/kontakt"
  },
  secondaryCTA = {
    text: "Meine Leistungen", 
    href: "#leistungen"
  },
  trustBadges = [],
  floatingCard = {
    enabled: false,
    title: "",
    subtitle: ""
  }
} = Astro.props;
---

<section id="home" class="relative min-h-screen flex items-center pt-32">
  <!-- Split Design -->
  <div class="w-full">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        
        <!-- Text Content -->
        <div class="order-2 lg:order-1">
          <span class="inline-block text-brand-green text-lg font-semibold mb-4">
            {greeting}
          </span>
          
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-brand-blue mb-6 leading-tight">
            {headline}
          </h1>
          
          <p class="text-lg text-gray-600 mb-8 leading-relaxed">
            {subline}
          </p>
          
          <!-- Trust Badges -->
          {trustBadges && trustBadges.length > 0 && (
            <div class="flex flex-wrap gap-4 mb-10">
              {trustBadges.map((badge) => (
                <span class="inline-flex items-center px-4 py-2 bg-gray-50 text-sm text-gray-600 rounded-full">
                  {badge}
                </span>
              ))}
            </div>
          )}
          
          <!-- Handwritten Promise -->
          <div class="mb-8">
            <p class="text-xl text-gray-700" style="font-family: 'Caveat', cursive; transform: rotate(-1deg); display: inline-block;">
              "Ehrlich, fair & unkompliziert - lass uns schnacken!"
            </p>
          </div>
          
          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a 
              href={primaryCTA.href}
              class="inline-flex items-center justify-center px-8 py-4 bg-brand-lightblue text-white rounded-full font-medium hover:bg-brand-blue transition-all duration-200 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
            >
              {primaryCTA.text}
            </a>
            
            <a 
              href={secondaryCTA.href}
              class="inline-flex items-center justify-center px-8 py-4 bg-white text-brand-green rounded-full font-medium border-2 border-brand-green hover:bg-brand-green hover:text-white transition-all duration-200"
            >
              {secondaryCTA.text}
            </a>
          </div>
        </div>
        
        <!-- Image -->
        <div class="order-1 lg:order-2 relative" style="z-index: 1;">
          <div class="relative rounded-2xl overflow-hidden shadow-2xl">
            <img 
              src="https://images.unsplash.com/photo-1637027884305-5a9528a37309?q=80&w=2012&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
              alt="Moderne Fahrzeugberatung und Autohaus im Alten Land - Grünendeich"
              class="w-full h-[400px] lg:h-[500px] object-cover"
              loading="eager"
              fetchpriority="high"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-brand-blue/20 to-transparent"></div>
          </div>
          
          <!-- Floating Card -->
          {floatingCard && floatingCard.enabled && (
            <div class="absolute -bottom-6 -left-6 bg-white p-6 rounded-xl shadow-lg max-w-xs hidden lg:block hover:shadow-xl transition-shadow duration-300" style="z-index: 2;">
              <div class="flex items-center gap-4">
                <div class="relative">
                  <img 
                    src="/alex.jpg" 
                    alt="Alexander Phillipowski - Inhaber Autoladen Altes Land"
                    class="w-14 h-14 rounded-full object-cover ring-2 ring-brand-green ring-offset-2"
                    loading="lazy"
                    decoding="async"
                  />
                  <div class={`absolute -bottom-1 -right-1 w-5 h-5 rounded-full border-2 border-white ${isOnline ? 'bg-green-500 animate-pulse' : 'bg-yellow-500'}`}></div>
                </div>
                <div>
                  <p class="text-2xl font-bold text-brand-blue">{floatingCard.title}</p>
                  <p class="text-gray-600 text-sm">{floatingCard.subtitle}</p>
                  <div class="flex items-center gap-1 mt-1">
                    <span class="text-yellow-400 text-xs">★★★★★</span>
                    <span class="text-gray-500 text-xs">5.0</span>
                  </div>
                </div>
              </div>
            </div>
          )}
        </div>
        
      </div>
    </div>
  </div>
</section>