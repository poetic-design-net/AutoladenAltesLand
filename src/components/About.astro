---
import { client, queries } from '../lib/sanity.ts';

// Kontaktdaten aus Sanity holen
let kontaktData;
try {
  kontaktData = await client.fetch(queries.kontakt);
} catch (error) {
  console.error('Error fetching kontakt data:', error);
}

// Fallback-Daten wenn Sanity nicht verfügbar
if (!kontaktData) {
  kontaktData = {
    telefon: "+49 162 123 4567",
    alexBild: "/alex.jpg",
    alexBildAlt: "Alexander Phillipowski"
  };
}

interface Props {
  title: string;
  subtitle: string;
  introText: string;
  timeline: Array<{
    year: string;
    title?: string;
    description?: string;
  }>;
  quote: string;
  phoneButtonText: string;
  contactButtonText: string;
  imageUrl?: string;
}

const {
  title,
  subtitle,
  introText,
  timeline,
  quote,
  phoneButtonText,
  contactButtonText,
  imageUrl
} = Astro.props;

const story = timeline;

const services = [
  {
    title: "Persönliche Betreuung",
    description: "Direkter Kontakt ohne Umwege. Ich bin persönlich für dich da."
  },
  {
    title: "Transparente Beratung",
    description: "Klare Informationen und ehrliche Empfehlungen für deine individuellen Bedürfnisse."
  },
  {
    title: "Komplettservice",
    description: "Von der Beratung bis zum Service - alles aus einer Hand."
  }
];
---

<section id="ueber-alex" class="py-20 relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-white to-brand-green/5"></div>
  
  <!-- Decorative Elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-brand-green/5 rounded-full blur-3xl transform translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-brand-blue/5 rounded-full blur-3xl transform -translate-x-1/2 translate-y-1/2"></div>
  
  <!-- Content Container with relative positioning -->
  <div class="relative z-10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        {title}
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        {subtitle}
      </p>
    </div>
    
    <!-- Content Grid -->
    <div class="grid lg:grid-cols-3 gap-12 items-start">
      
      <!-- Avatar Column -->
      <div class="lg:col-span-1">
        <div class="sticky top-24">
          <div class="flex justify-center">
            <img 
              src={kontaktData.alexBild || imageUrl || "/alex.jpg"}
              alt={kontaktData.alexBildAlt || "Alexander Phillipowski - Persönliche Fahrzeugberatung im Alten Land"}
              class="w-48 h-48 rounded-full object-cover shadow-xl"
              loading="lazy"
              decoding="async"
            />
          </div>
          <div class="text-center mt-6">
            <h3 class="text-xl font-bold text-gray-900">Alexander Phillipowski</h3>
            <p class="text-brand-green font-medium">Gründer & Inhaber</p>
          </div>
        </div>
      </div>
      
      <!-- Story Column -->
      <div class="lg:col-span-2 space-y-8">
        
        <!-- Geschichte -->
        <div>
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Meine Geschichte</h3>
          <div class="space-y-4">
            {story.map((item) => (
              <div class="flex gap-4">
                <div class="flex-shrink-0">
                  <span class="inline-block px-3 py-1 bg-brand-green/10 text-brand-green rounded-full text-sm font-semibold">
                    {item.year}
                  </span>
                </div>
                <p class="text-gray-600 leading-relaxed">
                  {item.description || item.title}
                </p>
              </div>
            ))}
          </div>
        </div>
        
        <!-- Quote -->
        <div class="border-l-4 border-brand-green bg-gray-50 p-6 rounded-r-lg">
          <p class="text-gray-700 italic text-lg">
            {quote}
          </p>
          <p class="mt-3 font-semibold text-brand-blue">- Alex</p>
        </div>
        
        <!-- Services -->
        <div class="grid md:grid-cols-3 gap-6">
          {services.map((service) => (
            <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-lg transition-shadow">
              <h4 class="font-bold text-gray-900 mb-2">{service.title}</h4>
              <p class="text-gray-600 text-sm">{service.description}</p>
            </div>
          ))}
        </div>
        
        <!-- CTA -->
        <div class="flex flex-col sm:flex-row gap-4 pt-8">
          <a 
            href={`tel:${kontaktData.telefon?.replace(/\s/g, '')}`}
            class="inline-flex items-center justify-center px-6 py-3 bg-brand-lightblue text-white rounded-full font-medium hover:bg-brand-blue transition-all duration-200 shadow-lg hover:shadow-xl"
          >
            Jetzt anrufen
          </a>
          
          <a 
            href="/kontakt"
            class="inline-flex items-center justify-center px-6 py-3 bg-white text-brand-green rounded-full font-medium border-2 border-brand-green hover:bg-brand-green hover:text-white transition-all duration-200"
          >
            Kontaktformular
          </a>
        </div>
        
      </div>
    </div>
    
  </div>
  </div>
</section>