---
interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Moin, ich bin Alex!",
  subtitle = "Dein persönlicher Ansprechpartner im Alten Land."
} = Astro.props;

const story = [
  {
    year: "2019",
    text: "Nach intensiver Marktanalyse erkannte ich die Lücke im Alten Land. Zeit für professionelle Mobilitätsberatung vor Ort."
  },
  {
    year: "2020",
    text: "Erste Räumlichkeiten in Jork eröffnet. Der Start war erfolgreich mit den ersten zufriedenen Kunden."
  },
  {
    year: "2023",
    text: "500+ zufriedene Kunden später: Etabliert als der Ansprechpartner für Mobilität im Alten Land."
  },
  {
    year: "Heute",
    text: "Ich bin dein Ansprechpartner für Mobilität im Alten Land. Persönlich, kompetent und zuverlässig."
  }
];

const services = [
  {
    title: "Persönliche Betreuung",
    description: "Direkter Kontakt ohne Umwege. Ich bin persönlich für dich da."
  },
  {
    title: "Transparente Beratung",
    description: "Klare Informationen und ehrliche Empfehlungen für deine individuellen Bedürfnisse."
  },
  {
    title: "Komplettservice",
    description: "Von der Beratung bis zum Service - alles aus einer Hand."
  }
];
---

<section id="ueber-alex" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        {title}
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        {subtitle}
      </p>
    </div>
    
    <!-- Content Grid -->
    <div class="grid lg:grid-cols-3 gap-12 items-start">
      
      <!-- Avatar Column -->
      <div class="lg:col-span-1">
        <div class="sticky top-24">
          <div class="flex justify-center">
            <img 
              src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=400&h=400&fit=crop&q=80"
              alt="Alexander Philipowsky"
              class="w-48 h-48 rounded-full object-cover shadow-xl"
            />
          </div>
          <div class="text-center mt-6">
            <h3 class="text-xl font-bold text-gray-900">Alexander Philipowsky</h3>
            <p class="text-brand-green font-medium">Gründer & Inhaber</p>
          </div>
        </div>
      </div>
      
      <!-- Story Column -->
      <div class="lg:col-span-2 space-y-8">
        
        <!-- Geschichte -->
        <div>
          <h3 class="text-2xl font-bold text-gray-900 mb-6">Meine Geschichte</h3>
          <div class="space-y-4">
            {story.map((item) => (
              <div class="flex gap-4">
                <div class="flex-shrink-0">
                  <span class="inline-block px-3 py-1 bg-brand-green/10 text-brand-green rounded-full text-sm font-semibold">
                    {item.year}
                  </span>
                </div>
                <p class="text-gray-600 leading-relaxed">
                  {item.text}
                </p>
              </div>
            ))}
          </div>
        </div>
        
        <!-- Quote -->
        <div class="border-l-4 border-brand-green bg-gray-50 p-6 rounded-r-lg">
          <p class="text-gray-700 italic text-lg">
            "Ich berate dich ehrlich und transparent. 
            Deine Zufriedenheit steht für mich an erster Stelle."
          </p>
          <p class="mt-3 font-semibold text-brand-blue">- Alex</p>
        </div>
        
        <!-- Services -->
        <div class="grid md:grid-cols-3 gap-6">
          {services.map((service) => (
            <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-lg transition-shadow">
              <h4 class="font-bold text-gray-900 mb-2">{service.title}</h4>
              <p class="text-gray-600 text-sm">{service.description}</p>
            </div>
          ))}
        </div>
        
        <!-- CTA -->
        <div class="flex flex-col sm:flex-row gap-4 pt-8">
          <a 
            href="tel:+491621234567"
            class="inline-flex items-center justify-center px-6 py-3 bg-brand-blue text-white rounded-full font-medium hover:bg-brand-lightblue transition-all duration-200 shadow-lg hover:shadow-xl"
          >
            Jetzt anrufen
          </a>
          
          <a 
            href="/kontakt"
            class="inline-flex items-center justify-center px-6 py-3 bg-white text-brand-green rounded-full font-medium border-2 border-brand-green hover:bg-brand-green hover:text-white transition-all duration-200"
          >
            Kontaktformular
          </a>
        </div>
        
      </div>
    </div>
    
  </div>
</section>