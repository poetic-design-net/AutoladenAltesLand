---
interface Props {
  title: string;
  description: string;
  accentColor?: 'blue' | 'green' | 'lightblue';
  href?: string;
}

const { 
  title, 
  description, 
  accentColor = 'blue',
  href = '#kontakt'
} = Astro.props;

const colors = {
  blue: 'bg-brand-blue',
  green: 'bg-brand-green',
  lightblue: 'bg-brand-lightblue'
};
---

<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-all duration-200 group">
  <div class={`h-1 ${colors[accentColor]}`}></div>
  <div class="p-6">
    <h3 class="text-lg font-semibold mb-3 text-gray-900 group-hover:text-brand-blue transition-colors">
      {title}
    </h3>
    <p class="text-gray-600 text-sm mb-4 leading-relaxed">
      {description}
    </p>
    <a 
      href={href} 
      class="text-brand-green font-medium hover:text-brand-blue inline-flex items-center text-sm transition-colors duration-200"
    >
      Mehr erfahren
      <span class="ml-1 group-hover:translate-x-1 transition-transform">â†’</span>
    </a>
  </div>
</article>