<style>
  /* Smooth entrance animation */
  @keyframes slideInUp {
    from {
      transform: translateY(100px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
  
  #whatsapp-widget {
    animation: slideInUp 0.5s ease-out 1s both;
  }
  
  /* Hide on very small screens if needed */
  @media (max-width: 360px) {
    #whatsapp-widget {
      bottom: 1rem;
      right: 1rem;
    }
    
    .whatsapp-button {
      width: 3rem;
      height: 3rem;
    }
    
    .whatsapp-button svg {
      width: 1.5rem;
      height: 1.5rem;
    }
  }
</style>

<script>
  // Show welcome message after 3 seconds (only on first visit)
  const hasSeenWelcome = localStorage.getItem('whatsappWelcomeShown');
  const welcomeMessage = document.getElementById('whatsapp-welcome');
  const closeButton = document.getElementById('close-welcome');
  
  if (!hasSeenWelcome && welcomeMessage) {
    setTimeout(() => {
      welcomeMessage.classList.remove('opacity-0', 'scale-95', 'pointer-events-none');
      welcomeMessage.classList.add('opacity-100', 'scale-100');
      localStorage.setItem('whatsappWelcomeShown', 'true');
      
      // Auto-hide after 10 seconds
      setTimeout(() => {
        hideWelcome();
      }, 10000);
    }, 3000);
  }
  
  function hideWelcome() {
    if (welcomeMessage) {
      welcomeMessage.classList.add('opacity-0', 'scale-95', 'pointer-events-none');
      welcomeMessage.classList.remove('opacity-100', 'scale-100');
    }
  }
  
  // Close button functionality
  closeButton?.addEventListener('click', hideWelcome);
</script>