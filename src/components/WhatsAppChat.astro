import { client, queries } from '../lib/sanity.ts';

// Kontaktdaten aus Sanity holen
let kontaktData;
try {
  kontaktData = await client.fetch(queries.kontakt);
} catch (error) {
  console.error('Error fetching kontakt data:', error);
}

// Fallback-Daten wenn Sanity nicht verfÃ¼gbar
if (!kontaktData) {
  kontaktData = {
    whatsappNummer: "491621234567",
    alexBild: "/alex.jpg",
    alexBildAlt: "Alexander Phillipowski"
  };
}

// WhatsApp-Nummer formatieren (Entferne alle Nicht-Ziffern auÃŸer +)
const phoneNumber = kontaktData.whatsappNummer?.replace(/[^0-9+]/g, '').replace('+', '') || "491621234567";

// Dynamic online status based on German business hours
const now = new Date();
const germanTime = new Date(now.toLocaleString("en-US", {timeZone: "Europe/Berlin"}));
const hours = germanTime.getHours();
const day = germanTime.getDay(); // 0 = Sunday, 6 = Saturday

// Business hours: Mon-Fri 9-17, Sat 9-14
const isBusinessHours = 
  (day >= 1 && day <= 5 && hours >= 9 && hours < 17) || // Mon-Fri
  (day === 6 && hours >= 9 && hours < 14); // Saturday

// Different messages based on time
const defaultMessage = isBusinessHours 
  ? "Hallo Alex! Ich interessiere mich fÃ¼r ein neues Fahrzeug."
  : "Hallo Alex! Ich interessiere mich fÃ¼r ein neues Fahrzeug. Gerne kÃ¶nnen wir morgen sprechen.";

// Status text based on time
const statusText = isBusinessHours ? "Online" : "Antwortet bald";
const statusColor = isBusinessHours ? "green" : "yellow";
const statusDotAnimation = isBusinessHours ? "animate-pulse" : "";
