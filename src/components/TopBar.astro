// Get current German time for online status
const now = new Date();
const germanTime = new Date(now.toLocaleString("en-US", {timeZone: "Europe/Berlin"}));
const hours = germanTime.getHours();
const day = germanTime.getDay();

// Check if Alex is online
const isOnline = 
  (day >= 1 && day <= 5 && hours >= 9 && hours < 17) || 
  (day === 6 && hours >= 9 && hours < 14);

// Format current day for display
const dayNames = ['So', 'Mo', 'Di', 'Mi', 'Do', 'Fr', 'Sa'];
const currentDay = dayNames[day];

// Get next opening time
const getNextOpening = () => {
  if (isOnline) return null;
  
  // If it's Saturday afternoon or Sunday, next opening is Monday
  if (day === 0 || (day === 6 && hours >= 14)) {
    return "Mo 9:00 Uhr";
  }
  // If it's after hours on weekday
  if (day >= 1 && day <= 5 && hours >= 17) {
    // If Friday evening, next is Saturday
    if (day === 5) return "Sa 9:00 Uhr";
    // Otherwise next day
    return `${dayNames[day + 1]} 9:00 Uhr`;
  }
  // If it's early morning
  if (hours < 9) {
    return "Heute 9:00 Uhr";
  }
  return "Mo 9:00 Uhr";
};

const nextOpening = getNextOpening();
